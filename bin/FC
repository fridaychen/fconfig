#!/bin/bash

function fc-include() {
    for x in $*; do
        [[ -f $x ]] && . "${x}"
    done
}

function fc-copy() {
    local src=$1
    local target=$2

    [[ ! -f "$target" || ! ("$target" -nt "$src") ]] &&
        mkdir -p $(dirname "$target") &&
        cp "$src" "$target"
}

function fc-add-path() {
    if [[ -d $1 && ! :$PATH: == *:$1:* ]]; then
        export PATH=$PATH:$1
    fi
}

fc-include ${FCHOME}/bin/Fcommon.sh \
    ${FCHOME}/bin/Fansi.sh \
    ${FCHOME}/bin/Falias.sh \
    ${FCHOME}/bin/Fproject.sh \
    ${FCHOME}/bin/Fmedia.sh \
    ${FCHOME}/bin/Fgit.sh \
    ${FCHOME}/bin/Finit.sh \
    ${FCHOME}/bin/Fps.sh

${FCHOME}/bin/Fwelcome.sh
